extends layout

block content
  div(class="row m-2")
  h1(class="col-sm-10")= title
  a(href = "costume/create" class="btn bg-dark text-white col-sm-2") Create
  |  

  - const costume = ['constume_type','size','Cost']
  //- let items = [] 
  - let items = results; 
  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 

  div(class='container-fluid')
    div(class="d-flex justify-content-end")

    div(class="p-3 mb-2 bg-dark text-white row")
      each item in costume 
        div(class="col-sm-2") #{item} :

    
    each o, index in items
      div(class="card text-dark bg-warning mb-3" class='col' class='card' class='card-body' class='card-text' onclick='buy('+index+')') #{o}
        
          div(class='col-sm-2') #{o.costume_type}
          div(class='col-sm-2') #{o.size}
          div(class='col-sm-2') $ #{o.cost}
          div(class='col-sm-6')
            //- div(class='col-sm-3' onclick='buy('+index+')') #{o} 
            a(href = "costume/detail/?id=" + o._id)    detail --
            a(href = "costume/update/?id=" + o._id)    update --
            a(href = "costume/delete/?id=" + o._id)    delete      